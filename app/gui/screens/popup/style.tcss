PopupScreen {
    align: center middle;
}

PopupScreen #dialog {
    grid-size: 1;
    grid-gutter: 1 2;
    grid-rows: 1fr 3;
    padding: 0 1;
    width: 60;
    height: 11;
    border: thick $background 80%;
    background: $surface;
}

PopupScreen #info {
    column-span: 2;
    height: 1fr;
    width: 1fr;
    content-align: center middle;
}

PopupScreen #okay {
    width: 60;
}